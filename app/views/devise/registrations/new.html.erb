    <!-- Preloader Start -->
    <div id="preloader-active">
        <div class="preloader d-flex align-items-center justify-content-center">
            <div class="preloader-inner position-relative">
                <div class="preloader-circle"></div>
                <div class="preloader-img pere-text">
                    <img src="../../assets/logo/loder.jpg" alt="">
                </div>
            </div>
        </div>
    </div>

    <main>
      <div class= "main-content">
        <div class="top-content">
          <%= link_to image_tag("logo/logo.png"), root_path %>
        </div>
      <div class="login-container">
        <%= form_with model: @user, url: user_registration_path, class: 'form-box', local: true do |f| %>
          <%= devise_error_messages! %>
          
          <%= f.text_field :nickname, autofocus: true, maxlength: "6", placeholder:"nickname" %>

          <%= f.email_field :email, placeholder:"Email" %>

          <%= f.password_field :password, autocomplete: "off", placeholder:"Password" %>

          <%= f.password_field :password_confirmation, autocomplete: "off", placeholder:"Password_confirmation" %>
        
          <%= f.submit "新規登録" %>

          <% if @minimum_password_length %>
            <em><%= @minimum_password_length %> Password characters minimum</em>
          <% end %><br />
        <% end %>
      </div>
      </div>
    </main>